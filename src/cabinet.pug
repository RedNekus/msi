doctype html
html(lang="ru")
    include ./parts/head.pug
    body
        include ./parts/header.pug
        .container
            .nav-block
                include ./parts/breadcrumbs.pug
        main
            .form-container
                .form-container__title Предмет лизинга
                form.lead-form(action="/" method="POST")
                    .lead-form__check
                        input.lead-form__check-input(type="checkbox", name="decided", id="decided")
                        label.lead-form__check-label(for="decided") Не определился с предметом лизинга
                    fieldset.lead-form__group.lead-form__group--disabled
                        legend.lead-form__label(for="link") Ссылка на автомобиль
                        input.lead-form__control(type="text", name="link", id="link", placeholder="*Ссылка", disabled)
                        .messages
                    fieldset.lead-form__group
                        legend.lead-form__label(for="model") Марка
                        input.lead-form__control(type="text", name="model", id="model", placeholder="*Марка")
                        .messages
                    fieldset.lead-form__group
                        legend.lead-form__label(for="price") Стоимость ($)
                        input.lead-form__control(type="text", name="price", id="price", placeholder="*1000")
                        .messages
                    fieldset.lead-form__group
                        legend.lead-form__label(for="term") Срок лизинга
                        input.lead-form__control(type="text", name="term", id="term", placeholder="*3 года")
                        .messages
                    fieldset.lead-form__group
                        legend.lead-form__label(for="down_payment") Срок лизинга
                        input.lead-form__control(type="text", name="down_payment", id="down_payment", placeholder="*10%")
                        .messages
                    .lead-form__back
                        a(href="#") Назад
                    .lead-form__bottom
                        input.lead-form__button(type="submit" value="Далее")

        include ./parts/footer.pug